<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/tvBackDialogAreYouSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvBackDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:text="This will stop your workout. You\'ve come this far, are you sure want to quit?"
        app:layout_constraintTop_toBottomOf="@+id/tvBackDialogAreYouSure"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnDialogBackYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBackDialogContent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnDialogCustomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBackDialogContent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>